<%= link_to("<< Back to List", { :action => 'index' }, :class => 'back-link') %>

<div class="properties show">
  <h2>Show Property</h2>

  <table summary="Property detail view">
    <tr>
      <th>Land Lord</th>
      <td><%= @property.landlord %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @property.rental_desc %></td>
    </tr>
    <tr>
      <th>Bedrooms</th>
      <td><%= @property.bedroom %></td>
    </tr>
    <tr>
      <th>Bathroom</th>
      <td><%= @property.bathroom %></td>
    </tr>
    <tr>
      <th>Rent</th>
      <td><%= number_to_currency(@property.rate).to_s %></td>
    </tr>
    <tr>
      <th>Phone</th>
      <td><%= @property.phone %></td>
    </tr>
    <tr>
      <th>Town</th>
      <td><%= @property.town %></td>
    </tr>
    <tr>
      <th>Parish</th>
      <td><%= @property.parish.parish_name %></td>
    </tr>
    <tr>
      <th>County</th>
      <td><%= @property.parish.county.county_name %></td>
    </tr>
  </table>
</div>
